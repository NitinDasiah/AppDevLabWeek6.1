<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOrder">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/design_default_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <EditText
        android:id="@+id/tableNumber"
        style="@style/Widget.AppCompat.EditText"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="392dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="Table Number"
        android:background="@null"
        android:ems="10"
        android:hint="Table Number"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/tableOrder"
        style="@style/Widget.AppCompat.EditText"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="384dp"
        android:layout_height="588dp"
        android:layout_marginTop="11dp"
        android:autofillHints="Enter Order"
        android:background="@null"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Table Order"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>